<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:layout_alignParentStart="true"
        android:id="@+id/trade_stock_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/stock_icon"
        tools:ignore="RtlCompat" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/trade_stock_text"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        tools:ignore="RtlCompat" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/list_trade_view_row_sell_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/armourer_scrap" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_trade_view_row_sell_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola"
        android:layout_gravity="center"
        android:textColor="@color/design_dark"
        android:textSize="16sp" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/list_trade_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/arrow_icon" />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/list_trade_view_row_buy_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/armourer_scrap" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_trade_view_row_buy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola"
        android:layout_gravity="center"
        android:textColor="@color/design_dark"
        android:textSize="16sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_trade_view_username"
        android:layout_width="wrap_content"
        android:text="hola"
        android:layout_height="wrap_content" />

    </LinearLayout>